// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         String @id @default(cuid())
  first_name String
  last_name  String
  email      String @unique
  password   String
  role       Role
}

model Organization {
  id                   String   @id @default(cuid())
  name                 String
  email                String   @unique
  address              String
  address_2            String
  city                 String
  state                String
  country              String   @default("US")
  primary_phone_number String
  properties           Property @relation(fields: [propertyId], references: [id])
  propertyId           String   @map("property_id")
}

model Property {
  id                   String         @id @default(cuid())
  name                 String
  address              String
  address_2            String
  city                 String
  state                String
  country              String         @default("US")
  primary_phone_number String
  Organization         Organization[]
}

enum Role {
  Owner
  Renter
  Superintendent
}
